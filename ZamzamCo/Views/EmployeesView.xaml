<UserControl x:Class="ZamzamCo.Views.EmployeesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vvmodel="clr-namespace:ZamzamCo.VewModels.ViewViewModel"
             xmlns:local="clr-namespace:ZamzamCo.Views"
             xmlns:scar="clr-namespace:Scar.Common.WPF.Controls;assembly=Scar.Common.WPF.Controls.NumericUpDown"
             xmlns:numeric="clr-namespace:NumericUpDownLib;assembly=NumericUpDownLib"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1250">
    <Grid DataContext="{Binding Source={x:Type vvmodel:EmployeeViewModel}}">
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Margin" Value="5 0"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="16"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Height" Value="25"/>
            </Style>
            <Style TargetType="ComboBox">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Height" Value="25"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Border Background="{StaticResource PraimaryLinearGraniantBrush}"
                CornerRadius="40"
                Margin="10">
            <TextBlock Text="شاشة الموظفين"
                   Grid.Row="0"
                   FontSize="28"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Stretch"
                   TextAlignment="Center"
                   Foreground="{StaticResource ForgroundVeryLightBrush}"/>
        </Border>
        
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="اشعارات" Grid.Row="0"
                       FontSize="16" 
                       Background="{StaticResource BackgrounLightBrush}"/>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MaxWidth="350"/>
                    <ColumnDefinition Width="*" MaxWidth="350"/>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0"
                        Margin="10" BorderBrush="{StaticResource BorderBrushBrush}"
                        BorderThickness="2" Padding="10"
                        CornerRadius="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MaxWidth="115" MinWidth="100"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0"  Text="اسم الموظف"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="EmpNameTxt"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="رقم الهاتف" />
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="EmpPhoneTxt"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="العنوان" />
                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="EmpAddressTxt"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="المدينة" />
                        <ComboBox Grid.Row="3" Grid.Column="1" x:Name="EmpCityCbo"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="المحافظة" />
                        <ComboBox Grid.Row="4" Grid.Column="1" x:Name="EmpRegionCbo"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="الدولة" />
                        <ComboBox Grid.Row="5" Grid.Column="1" x:Name="EmpContryCbo"/>

                        <TextBlock Grid.Row="6" Grid.Column="0" Text="الرمز البريدي" />
                        <TextBox Grid.Row="6" Grid.Column="1" x:Name="EmpPostaTxt"/>

                        <TextBlock Grid.Row="7" Grid.Column="0" Text="الرقم القومي" />
                        <TextBox Grid.Row="7" Grid.Column="1" x:Name="EmpNIDTxt"/>

                        <TextBlock Grid.Row="8" Grid.Column="0" Text="تاريخ الميلاد" />
                        <DatePicker Grid.Row="8" Grid.Column="1" x:Name="EmpBirthDateDt" VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                <Border Grid.Column="1" BorderBrush="{StaticResource BorderBrushBrush}"
                        BorderThickness="2" Margin="10"
                        CornerRadius="10"
                        Padding="10">
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MaxWidth="150" MinWidth="135"/>
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="القسم" />
                        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="EmpDepCbo"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="المسمى الوظيفي" FontSize="16"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="EmpTitleTxt"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="تاريخ التعيين" />
                        <DatePicker Grid.Row="2" Grid.Column="1" x:Name="EmpHeireDateDt" VerticalAlignment="Center"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="المرتب"/>
                        <scar:NumericUpDown  Grid.Row="3" Grid.Column="1"
                                             
                                             BorderThickness="1" 
                                             BorderBrush="{StaticResource BackgrounVeryLightBrush}"
                                             VerticalAlignment="Center" HorizontalAlignment="Stretch"
                                             HorizontalContentAlignment="Stretch"
                                             />


                        <TextBlock Grid.Row="4" Grid.Column="0" Text="المؤهلات" />
                        <TextBox Grid.Row="4" Grid.Column="1" x:Name="EmpQualificationTxt"/>
                        
                        <StackPanel Grid.Row="5"  Grid.RowSpan="3" Grid.ColumnSpan="2" 
                                 Orientation="Horizontal">


                            <Ellipse  Stroke="{StaticResource BackGrounMainTextBrush }"
                                      Width="150" Height="150" FlowDirection="LeftToRight">
                                <Ellipse.Fill >
                                    <DrawingBrush  Stretch="UniformToFill"  >
                                        <DrawingBrush.Drawing  >
                                            <ImageDrawing  ImageSource="/Images/55.jpg" 
                                                          Rect="0 0 150 150"  />
                                        </DrawingBrush.Drawing>
                                    </DrawingBrush>

                                </Ellipse.Fill>
                            </Ellipse>

                            <Button Grid.Row="6" Grid.Column="1"
                                    Content="..."
                                    Margin="50 0 0 0"
                                    Width="40"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center" 
                                    VerticalContentAlignment="Center"
                                    HorizontalContentAlignment="Center"/>
                        </StackPanel>

                    </Grid>
                </Border>
                <Border Grid.Column="2" BorderBrush="{StaticResource BorderBrushBrush}"
                        BorderThickness="2" Margin="10"
                        CornerRadius="10"
                        Padding="10">
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="115"/>
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>

                    </Grid>
                </Border>

            </Grid>

            <StackPanel Grid.Row="2" Grid.Column="0"
                        Orientation="Horizontal" 
                        Grid.ColumnSpan="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="0 30">
                <StackPanel.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource RoundedBTN}"/>
                </StackPanel.Resources>
                <Button Content="أضافة" Margin="10 0"/>
                <Button Content="تعديل" Margin="10 0"/>
                <Button Content="حذف" Margin="10 0"/>
                <Button Content="بحث" Margin="10 0"/>
            </StackPanel>

        </Grid>
    </Grid>
</UserControl>
